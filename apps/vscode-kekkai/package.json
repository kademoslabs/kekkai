{
  "name": "vscode-kekkai",
  "displayName": "Kekkai Security Scanner",
  "description": "Local-first security scanning integrated into VS Code with real-time diagnostics, hover details, and AI-powered quick fixes",
  "version": "0.2.0",
  "publisher": "kademoslabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kademoslabs/kekkai"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "security",
    "scanner",
    "sast",
    "sca",
    "vulnerability",
    "semgrep",
    "trivy",
    "gitleaks",
    "quick-fix"
  ],
  "activationEvents": [
    "workspaceContains:**/*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kekkai.scan",
        "title": "Kekkai: Run Security Scan",
        "icon": "$(shield)"
      },
      {
        "command": "kekkai.clearDiagnostics",
        "title": "Kekkai: Clear Diagnostics"
      },
      {
        "command": "kekkai.applyFix",
        "title": "Kekkai: Apply Quick Fix"
      }
    ],
    "keybindings": [
      {
        "command": "kekkai.scan",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Kekkai",
      "properties": {
        "kekkai.scanDebounceMs": {
          "type": "number",
          "default": 30000,
          "minimum": 1000,
          "maximum": 600000,
          "description": "Minimum time between scans in milliseconds (1s - 10min)"
        },
        "kekkai.autoScanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan when files are saved"
        },
        "kekkai.cliPath": {
          "type": "string",
          "default": "kekkai",
          "description": "Path to kekkai CLI executable"
        },
        "kekkai.scanTimeoutMs": {
          "type": "number",
          "default": 300000,
          "minimum": 10000,
          "maximum": 1800000,
          "description": "Maximum scan duration in milliseconds (default: 5 minutes)"
        },
        "kekkai.enabledScanners": {
          "type": "object",
          "default": {
            "trivy": true,
            "semgrep": true,
            "gitleaks": true
          },
          "properties": {
            "trivy": {
              "type": "boolean",
              "default": true,
              "description": "Enable Trivy vulnerability scanner"
            },
            "semgrep": {
              "type": "boolean",
              "default": true,
              "description": "Enable Semgrep SAST scanner"
            },
            "gitleaks": {
              "type": "boolean",
              "default": true,
              "description": "Enable Gitleaks secret scanner"
            }
          },
          "description": "Configure which scanners to enable"
        },
        "kekkai.nativeMode": {
          "type": "boolean",
          "default": false,
          "description": "Use native scanner binaries instead of Docker (requires local installation)"
        },
        "kekkai.showHoverDetails": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed finding information on hover"
        },
        "kekkai.enableQuickFix": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered quick fix suggestions for Semgrep findings"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTests.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  }
}
